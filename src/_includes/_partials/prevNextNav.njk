<nav aria-label="Go to Previous or Next article">
  {% for post in collections.post -%}
    {% if post.inputPath == page.inputPath -%}
      {%- set nextPost = collections.post[loop.index0 - 1] %}
      {%- set previousPost = collections.post[loop.index0 + 1] %}

      {% if previousPost.url -%}
        <a data-type="outline" href="{{previousPost.url}}" data-link-to="previous-post">
          <svg height="1em" viewbox="0 0 22 38">
            <path fill="currentColor" d="M18.9 38l3.1-3.1L6.1 19 22 3.1 18.9 0 0 19z"></path>
          </svg>
          <span>{{previousPost.data.title}}</span>
        </a>
      {% endif -%}

      {% if nextPost.url -%}
        <a data-type="outline" href="{{nextPost.url}}" data-link-to="next-post">
          <span>{{nextPost.data.title}}</span>
          <svg height="1em" viewbox="0 0 22 38">
            <path fill="currentColor" d="M3.1 0L0 3.1 15.9 19 0 34.9 3.1 38 22 19z"></path>
          </svg>
        </a>
      {% endif -%}
    {% endif -%}
  {% endfor -%}
</nav>
